# ===================================================================
# DEVELOPMENT/TESTING CONFIGURATION ONLY - NOT FOR PRODUCTION USE
# ===================================================================
# This configuration is for local development and testing only.
# The authentication system is basic and NOT suitable for production.
# For production, implement proper security measures.
# ===================================================================

# Authentication Configuration
# Set to true to enable authentication, false to disable
AUTH_ENABLED=false

# Default login credentials (DEVELOPMENT ONLY - CHANGE THESE!)
# These are public default values - never use in production
AUTH_USERNAME=admin
AUTH_PASSWORD=admin123

# API Configuration
API_HOST=0.0.0.0
API_PORT=8082

# CORS Origins - allowed origins for cross-origin requests
CORS_ORIGINS=["http://localhost:8080", "http://localhost:3000", "http://localhost:5173"]

# Frontend Environment Variables
# Add these to your frontend .env file as well:
# NEXT_PUBLIC_AUTH_ENABLED=false
# NEXT_PUBLIC_API_URL=http://localhost:8082